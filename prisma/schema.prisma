generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            String   @id @default(uuid()) @db.Char(36)
  username      String   @unique
  password_hash String
  created_at    DateTime @default(now())
  refresh_token String?

  posts     Posts[]
  followers Follows[] @relation("UserFollowerRelation")
  following Follows[] @relation("UserFolloweeRelation")
}

model Posts {
  id         String   @id @default(uuid()) @db.Char(36)
  content    String   @db.VarChar(200) //max 200 character
  created_at DateTime @default(now())

  user    Users  @relation(fields: [user_id], references: [id])
  user_id String
}

model Follows {
  follower_id String
  follower    Users  @relation("UserFollowerRelation", fields: [follower_id], references: [id])
  followee_id String
  following   Users  @relation("UserFolloweeRelation", fields: [followee_id], references: [id])

  created_at DateTime @default(now())

  @@id([follower_id, followee_id])
}
